{
  "compilerOptions": {
    "target": "ES2022", // objetivo moderno
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // librerías
    "module": "ESNext", // módulos nativos
    "moduleResolution": "Bundler", // resolución moderna
    "jsx": "preserve", // JSX lo maneja Next
    "strict": true, // TypeScript estricto
    "noUncheckedIndexedAccess": true, // seguridad extra
    "noImplicitOverride": true, // overrides explícitos
    "exactOptionalPropertyTypes": true, // opcionales exactos
    "forceConsistentCasingInFileNames": true, // casing consistente
    "esModuleInterop": true, // interop con CJS
    "resolveJsonModule": true, // importar JSON
    "skipLibCheck": true, // omite chequeo de libs
    "baseUrl": ".", // base url
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/features/*": ["src/features/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/lib/*": ["src/lib/*"],
      "@/store/*": ["src/store/*"],
      "@/styles/*": ["src/styles/*"]
    },
    "types": ["vitest/globals", "@types/node"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.cts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
